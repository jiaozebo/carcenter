<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/vehicle_info_base_info_radio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="基本信息" />

        <RadioButton
            android:layout_width="0dp"
            android:id="@+id/vehicle_info_plugins_info_radio"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="设备信息" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:background="@drawable/button_selector_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.harbinpointech.carcenter.activity.VehicleInfoActivity" />

</LinearLayout>
